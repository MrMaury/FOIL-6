# Classe base (molde geral da vida do Maurícyo)
class Mauricyo:
    def __init__(self, idade):
        self.nome = "Maurícyo"
        self.idade = idade
    
    def apresentar(self):
        print(f"Olá, eu sou {self.nome} e tenho {self.idade} anos.")
    
    def viver(self):
        print("Estou vivendo minha vida...")


# Classe que representa a infância do Maurícyo (1 a 6 anos)
class Crianca(Mauricyo):
    def viver(self):
        print(f"{self.nome}, com {self.idade} anos, está passando pela infância.")
        if self.idade in [1, 2, 3]:
            print("- Montou em um pônei.")
            print("- Pediu um irmão.")
        elif self.idade == 4:
            print("- Nasceu o irmão.")
            print("- Ingressou na escola.")
        elif self.idade == 5:
            print("- Fez primeiras viagens.")
        elif self.idade == 6:
            print("- Teve os primeiros melhores amigos.")


# Classe que representa a adolescência do Maurícyo (13 a 18 anos)
class Adolescente(Mauricyo):
    def viver(self):
        print(f"{self.nome}, com {self.idade} anos, está na adolescência.")
        if self.idade == 13:
            print("- Ingressou no período da manhã.")
        elif self.idade == 14:
            print("- Ingressou no time principal de basquete do colégio.")
        elif self.idade in [15, 16]:
            print("- Viveu os primeiros relacionamentos.")
            print("- Ingressou no ensino médio.")
            print("- Foi campeão do Maristão.")
        elif self.idade == 17:
            print("- Terminou o ensino médio.")
        elif self.idade == 18:
            print("- Ingressou na faculdade.")


# Classe que representa a fase adulta do Maurícyo (19 a 21 anos)
class Adulto(Mauricyo):
    def viver(self):
        print(f"{self.nome}, com {self.idade} anos, está na fase adulta.")
        if self.idade == 19:
            print("- Aprendeu a dirigir.")
            print("- Está cursando a faculdade.")
        elif self.idade in [20, 21]:
            print("- Está cursando a faculdade.")


# Classe que representa o projeto de vida/natureza do Maurícyo
class ProjetoDeVida:
    def __init__(self, fase):
        self.fase = fase
    
    def executar(self):
        self.fase.apresentar()
        self.fase.viver()


# ---- Execução ----
if __name__ == "__main__":
    # Infância (1 a 6 anos)
    for idade in range(1, 7):
        projeto = ProjetoDeVida(Crianca(idade))
        projeto.executar()
        print("\n---\n")

    # Adolescência (13 a 18 anos)
    for idade in range(13, 19):
        projeto = ProjetoDeVida(Adolescente(idade))
        projeto.executar()
        print("\n---\n")

    # Adulto (19 a 21 anos)
    for idade in range(19, 22):
        projeto = ProjetoDeVida(Adulto(idade))
        projeto.executar()
        print("\n---\n")

    print("Fim do ciclo de vida do Maurícyo.")
